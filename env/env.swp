package env

//Config 系統參數
type Config struct {
	Env            string
	Path           string
	TimeFormat     string
	WorkAt         string
	LunchTimeHours float64
	DailyWorkHours float64
	Database       struct {
		Host      string
		User      string
		Password  string
		Database  string
		Charset   string
		ParseTime string
		Loc       string
	}
	Mail struct {
		Host     string
		User     string
		Password string
		Port     string
	}
	API struct {
		Holiday string
		Counter string
	}
	Filters struct {
		SkipNoNeedCheckinMembers bool
		SkipNoNeedCheckinDays    bool
	}
	AlertMail []string
}

var cfg = &Config{}

func init() {
	cfg.Env = "develop"
	cfg.Path = "./data"
	cfg.TimeFormat = "2006-01-02 15:04:05"
	cfg.WorkAt = "08:30"
	cfg.LunchTimeHours = 1.5
	cfg.DailyWorkHours = 8.0
	cfg.Database.User = ""
	cfg.Database.Password = ""
	cfg.Database.Host = "127.0.0.1"
	cfg.Database.Database = ""
	cfg.Database.Charset = "utf8mb4"
	cfg.Database.ParseTime = "true"
	cfg.Database.Loc = "Local"
	cfg.Mail.Host = ""
	cfg.Mail.User = ""
	cfg.Mail.Password = ""
	cfg.Mail.Port = "25"
	cfg.API.Holiday = "http://data.ntpc.gov.tw/api/v1/rest/datastore/382000000A-000077-002"
	cfg.API.Counter = "http://127.0.0.1:8805"
	cfg.Filters.SkipNoNeedCheckinMembers = true
	cfg.Filters.SkipNoNeedCheckinDays = true
	cfg.AlertMail = []string{}
}

//GetEnv 取得環境參數
func GetEnv() *Config {
	return cfg
}
